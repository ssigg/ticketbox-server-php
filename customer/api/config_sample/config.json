{
    "displayErrorDetails": false,
    "addContentLengthHeader": false,
    "Spot": {
        "dbsyntax": "sqlite",
        "path": "../data/database.db",
        "driver": "pdo_sqlite"
    },
    "Mailer": {
        "from": "From <from@example.com>",
        "replyTo": {
            "name": "Reply To",
            "email": "reply@example.com"
        },
        "order-confirmation": {
            "subject": "Ticket order confirmation"
        },
        "order-notification": {
            "subject": "Ticket order notification",
            "listeners": [
                "listener@example.com"
            ]
        },
        "purchase-confirmation": {
            "subject": "Ticket purchase confirmation"
        },
        "purchase-notification": {
            "subject": "Ticket purchase notification",
            "listeners": [
                "listener@example.com"
            ]
        }
    },
    "SeatplanWriter": {
        "markerColor": {
            "R": 255,
            "G": 50,
            "B": 50
        }
    },
    "PaymentProvider": {
        "gateway": "Braintree",
        "settings": {
            "environment": "sandbox",
            "merchantId": "merchantId",
            "publicKey": "publicKey",
            "privateKey": "privateKey"
        }
    },
    "templateDirectory": "../common/templates",
    "tempDirectory": "temp",
    "logDirectory": "logs",
    "ticketDirectory": "../common/tickets",
    "PdfConverter": {
        "service": "Api2Pdf",
        "settings": {
            "postUrl": "https://v2018.api2pdf.com/chrome/html",
            "key": "apiKey"
        }
    },
    "Reservations": {
        "lifetimeInSeconds": 600
    },
    "PriceModificators": {
        "addend": 0,
        "factor": 1
    },
    "Log": {
        "from": "From Logger <log@example.com>",
        "subject": "Error",
        "listeners": [
            "listener1@example.com",
            "listener2@example.com"
        ]
    }
}